class Solution {
public:
    bool isValid(string s) {
        stack <char> st;
        for (char i: s){
            if (i == '(' || i == '{' || i == '['){
                st.push(i);
            }else{
                if(st.size() == 0) {
                    return false;
                }

                if (st.top() == '(' && i == ')' ){
                    st.pop();
                }
                else if (st.top() == '{' && i == '}' ){
                    st.pop();
                }
                else if (st.top() == '[' && i == ']' ){
                    st.pop();
                }
                else {
                    return false;
                }
            }
        }
        if (st.size() != 0){
            return false;
        }
        return true;

    }
};